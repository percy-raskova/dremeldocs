# Auto detect text files and perform LF normalization
* text=auto

# Text files (force LF line endings)
*.py text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf

# Documentation
*.html text eol=lf diff=html
*.css text eol=lf diff=css
*.scss text eol=lf diff=css
*.js text eol=lf diff=javascript
*.ts text eol=lf diff=javascript

# Config files
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf
.env.example text eol=lf
Makefile text eol=lf
makefile text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.tgz binary
*.pyc binary
*.pyo binary
*.pyd binary
*.so binary
*.dll binary
*.dylib binary
*.db binary
*.sqlite binary
*.sqlite3 binary

# Jupyter notebooks (store as plain text)
*.ipynb filter=nbstripout

# Large files (if using Git LFS - uncomment if needed)
# data/*.json filter=lfs diff=lfs merge=lfs -text
# *.pkl filter=lfs diff=lfs merge=lfs -text
# *.h5 filter=lfs diff=lfs merge=lfs -text
# *.hdf5 filter=lfs diff=lfs merge=lfs -text

# Diff settings for better readability
*.py diff=python
*.md diff=markdown

# Export ignore (files not included in archives)
.github export-ignore
.gitignore export-ignore
.gitattributes export-ignore
tests/ export-ignore
docs/ export-ignore
.pytest_cache/ export-ignore
.coverage export-ignore
htmlcov/ export-ignore