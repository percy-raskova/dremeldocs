# DremelDocs Environment Configuration Template
# Copy to .env and customize for your environment

# Environment
ENVIRONMENT=development  # development, staging, production

# Site Configuration
SITE_NAME="DremelDocs - Revolutionary Theory Archive"
SITE_URL="http://localhost:8000"
SITE_DESCRIPTION="Curated revolutionary theory from @BmoreOrganized"

# Feature Flags
SEARCH_ENABLED=true
SOCIAL_ENABLED=false
OPTIMIZE_ENABLED=false
PRIVACY_ENABLED=false
RSS_ENABLED=false
CARDS_ENABLED=false

# Performance
MAX_WORKERS=4
CACHE_ENABLED=true
PARALLEL_PROCESSING=true

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=logs/dremeldocs.log

# Analytics (optional)
ANALYTICS_PROVIDER=none  # google, matomo, plausible
ANALYTICS_ID=

# Security
SECRET_KEY=change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Staging/Production
STAGING_AUTH_USERS=
SENTRY_DSN=

# CI/CD
CI=false
GITHUB_TOKEN=
DEPLOY_KEY=

# Development
DEBUG=false
HOT_RELOAD=true
MOCK_DATA=false
